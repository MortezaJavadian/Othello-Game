#include <stdio.h>
#include <windows.h>
#include <conio.h>

#define Up 72
#define Down 80
#define Esc 27

void clear1()
{
       system("cls");
}

void gotoxy1(int x, int y)
{
       COORD coord;
       coord.X = x + 59;
       coord.Y = y + 9;
       SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}

int HomePage()
{
       clear1();
       SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 2);
       printf("\n\n");
       printf("\t\t\t\t #######  ##########  ##      ##  ########  ##        ##        ####### \n"
              "\t\t\t\t##     ##     ##      ##      ##  ##        ##        ##       ##     ##\n"
              "\t\t\t\t##     ##     ##      ##      ##  ##        ##        ##       ##     ##\n"
              "\t\t\t\t##     ##     ##      ##########  ######    ##        ##       ##     ##\n"
              "\t\t\t\t##     ##     ##      ##      ##  ##        ##        ##       ##     ##\n"
              "\t\t\t\t##     ##     ##      ##      ##  ##        ##        ##       ##     ##\n"
              "\t\t\t\t #######      ##      ##      ##  ########  ########  ########  ####### \n\n");

       SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 12);
       printf("\t\t\t\t\t\t\t    1.New Game\n"
              "\t\t\t\t\t\t\t    2.Continued Games\n"
              "\t\t\t\t\t\t\t    3.Exit");

       int y = 1;
       gotoxy1(1, y);
       char movement;
       do
       {
              movement = getch();

              if (movement == Down && y < 3)
              {
                     gotoxy1(1, ++y);
              }
              else if (movement == Up && 1 < y)
              {
                     gotoxy1(1, --y);
              }

       } while (movement != '\r' && movement != Esc);
       clear1();

       return y;
}